extends layout

block content
	div(class="parallax-container upper-parallax")
		div(class="parallax")
			img(src="/parallaxbg.jpg")
	div(class="section white")
		div(class="row center")
			h1 Join the network
	div(class="row")
		div(class="col s12 center-align")
			div(class="card" id="form-layout")
				div(class="row")
					i(class="large material-icons" id="form-icon") account_circle
					div(class="row")
						div(class="col")
							form(action='/login', method='POST' class="col s12")
								div(class="form-group" id="form-card")
									input(type='text', name='username' class='form-control', placeholder='Username',required, autofocus)
									input(type='password', name='password' class='form-control', placeholder='Password', required)
									button(class="waves-effect waves-light btn", type='submit') Sign in
					div(class="row center-align")
						a(href='/signup') Create an account 
					

				#message
					if message
						h1.text-center.error-message #{message}
	div(class="parallax-container")
		div(class="parallax")
			img(src="/parallaxbg.jpg")
