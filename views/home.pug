extends layout

block content
	div.container
		div.row
			div.col-sm-6.col-md-4.col-md-offset-4
				div(class="card blue-grey darken-1" id="form-layout")
					div(class="card-content white-text")
						#user
						span(class="card-title") Hello #{user.username}
						p Here is the email you entered: #{user.email}
					div(class="card-action")
						a(href='/signout', class='text-center new-account') Sign Out
